        <defName>MSS_GG_FroggeJoin</defName>
        <label>frogge</label>
        <category>Special</category>
        <targetTags>
            <li>Map_PlayerHome</li>
        </targetTags>
        <workerClass>Grey_Goo.IncidentWorker_FroggeJoin</workerClass>
        <letterLabel>frogge</letterLabel>
        <letterText>frogge</letterText>
        <baseChance>3</baseChance>
        <minRefireDays>60</minRefireDays>
        <minGreatestPopulation>3</minGreatestPopulation>
        <pawnKind>MSS_GG_Frogge</pawnKind>
