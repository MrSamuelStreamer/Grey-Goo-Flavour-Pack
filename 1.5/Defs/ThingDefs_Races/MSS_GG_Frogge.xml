<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="AnimalThingBase">
        <defName>MSS_GG_Frogge</defName>
        <label>frogge</label>
        <description>frogge.</description>
        <statBases>
            <MoveSpeed>5.0</MoveSpeed>
            <MarketValue>120</MarketValue>
            <ComfyTemperatureMin>-30</ComfyTemperatureMin>
        </statBases>
        <tools>
            <li>
                <capacities>
                    <li>Bite</li>
                </capacities>
                <power>16</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
                <chanceFactor>0.7</chanceFactor>
                <surpriseAttack>
                    <extraMeleeDamages>
                        <li>
                            <def>Stun</def>
                            <amount>14</amount>
                        </li>
                    </extraMeleeDamages>
                </surpriseAttack>
            </li>
            <li>
                <label>head</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>12</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
                <chanceFactor>0.3</chanceFactor>
            </li>
        </tools>
        <uiIconScale>1.5</uiIconScale>
        <race>
            <thinkTreeMain>MSS_GG_Frogge</thinkTreeMain>
            <packAnimal>true</packAnimal>
            <headPosPerRotation>
                <li>(0.0, 0, 0.07)</li>
                <li>(0.19, 0, 0)</li>
                <li>(0.0, 0, -0.07)</li>
                <li>(-0.19, 0, 0)</li>
            </headPosPerRotation>
            <body>QuadrupedAnimalWithPawsAndTail</body>
            <baseBodySize>2</baseBodySize>
            <overrideShouldHaveAbilityTracker>true</overrideShouldHaveAbilityTracker>
            <baseHungerRate>0.215</baseHungerRate>
            <baseHealthScale>0.9</baseHealthScale>
            <foodType>VegetarianRoughAnimal</foodType>
            <leatherDef>Leather_Light</leatherDef>
            <wildness>0</wildness>
            <trainability>Advanced</trainability>
            <petness>1</petness>
            <mateMtbHours>8</mateMtbHours>
            <gestationPeriodDays>5.661</gestationPeriodDays>
            <soundEating>Rodent_Eat</soundEating>
            <litterSizeCurve>
                <points>
                    <li>(1.0, 0)</li>
                    <li>(1.5, 1)</li>
                    <li>(2.0, 1)</li>
                    <li>(2.5, 0)</li>
                </points>
            </litterSizeCurve>
            <lifeExpectancy>30</lifeExpectancy>
            <lifeStageAges>
                <li>
                    <def>AnimalBaby</def>
                    <minAge>0</minAge>
                </li>
                <li>
                    <def>AnimalJuvenile</def>
                    <minAge>0.1</minAge>
                </li>
                <li>
                    <def>AnimalAdult</def>
                    <minAge>0.2222</minAge>
                    <soundWounded>Pawn_Hare_Wounded</soundWounded>
                    <soundDeath>Pawn_Hare_Death</soundDeath>
                    <soundCall>Pawn_Hare_Call</soundCall>
                    <soundAngry>Pawn_Hare_Angry</soundAngry>
                </li>
            </lifeStageAges>
            <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
        </race>
        <comps>
            <li Class="CompProperties_MoteEmitter">
                <mote>Mote_PsychicEmanatorEffect</mote>
                <emissionInterval>350</emissionInterval>
            </li>
            <li Class="CompProperties_EggLayer">
                <eggFertilizedDef>MSS_GG_EggFroggeFertilized</eggFertilizedDef>
                <eggFertilizationCountMax>4</eggFertilizationCountMax>
                <eggLayIntervalDays>3.33</eggLayIntervalDays>
                <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
                <eggCountRange>5</eggCountRange>
            </li>
            <li Class="CompProperties_Devourer">
                <messageDigested>A frogge swallowed {PAWN_nameDef} whole! Kill the frogge before it digests {PAWN_nameDef}.</messageDigested>
                <messageEmerged>{PAWN_nameDef} emerged from the frogge.</messageEmerged>
                <messageEmergedCorpse>{PAWN_nameDef} emerged from the frogge's corpse.</messageEmergedCorpse>
                <messageDigestionCompleted>The frogge has regurgitated {PAWN_nameDef}.</messageDigestionCompleted>
                <digestingInspector>Digesting {PAWN_nameDef}: {SECONDS} seconds left</digestingInspector>
                <completeDigestionDamage>200</completeDigestionDamage>
                <bodySizeDigestTimeCurve>
                    <points>
                        <li>(0.2, 10)</li>
                        <li>(1, 30)</li>
                        <li>(3.5, 60)</li>
                    </points>
                </bodySizeDigestTimeCurve>
                <timeDamageCurve>
                    <points>
                        <li>(0, 10)</li>
                        <li>(60, 40)</li>
                    </points>
                </timeDamageCurve>
            </li>
        </comps>
        <tradeTags>
            <li>AnimalCommon</li>
        </tradeTags>
    </ThingDef>

    <ThingDef ParentName="EggFertBase">
        <defName>MSS_GG_EggFroggeFertilized</defName>
        <label>frogge spawn (fert.)</label>
        <description>fertilized frogge spawn. If all goes well, it should hatch into a baby frogge. It can be eaten raw, but it's much better cooked.</description>
        <possessionCount>1</possessionCount>
        <graphicData>
            <color>(30,230,20)</color>
            <drawSize>1.3</drawSize>
        </graphicData>
        <statBases>
            <Nutrition>0.6</Nutrition>
            <MarketValue>23.0</MarketValue>
        </statBases>
        <comps>
            <li Class="CompProperties_Hatcher">
                <hatcherDaystoHatch>8</hatcherDaystoHatch>
                <hatcherPawn>MSS_GG_Frogge</hatcherPawn>
            </li>
        </comps>
    </ThingDef>

