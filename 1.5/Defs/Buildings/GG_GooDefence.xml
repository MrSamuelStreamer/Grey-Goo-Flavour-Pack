                <minIdleAlpha>0.05</minIdleAlpha>
                <color>(0.2, 0.2, 1)</color>
                <activeSound>Broadshield_Ambience</activeSound>
                <gooInfectedHediffs>
                    <li>Taggerung_SCP_GeneMutation</li>
                </gooInfectedHediffs>
